{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/types"],
    "target": "es2022",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*", "src/types/*"]
}
